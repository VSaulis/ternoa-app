{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": ["react-native"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@api/*": ["src/api/*"],
      "@common/*": ["src/common/*"],
      "@components": ["src/components"],
      "@core/*": ["src/core/*"],
      "@features/*": ["src/features/*"],
      "@i18n": ["src/i18n"],
      "@navigation/*": ["src/navigation/*"],
      "@screens": ["src/screens"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"]
    },
  }
}
